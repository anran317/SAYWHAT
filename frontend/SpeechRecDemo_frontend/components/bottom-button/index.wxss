/* 底部按钮部分 */
.button-wrap {
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: center;
  justify-content: center;
  
}

/* 底部按钮最底层样式 */
.img-big-wrap {
  width: 100%;
  display: -webkit-flex;
  display: flex;
  background-color: rgb(241, 236, 227);
  /* opacity: 98%; */
}

/* 按钮的容器 */
.button-container{
  display: flex;
  display: -webkit-flex;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  align-items: center;
  -webkit-align-items:center;
  margin: 0 calc( (100% - 240rpx * 2) / 3 );
  margin-bottom: 18px;
  padding: 50rpx 0 38rpx 0;
}
/* 两个按钮的摆放 */
.button-item {
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  -webkit-flex-direction: column;
  justify-content: flex-start;
  -webkit-justify-content: flex-start;
  align-items: center;
  -webkit-align-items: center;
  width: 240rpx;
  box-sizing: border-box;
}
/* 按钮下方的提示 */
.button-label {
  font-size: 32rpx;
  font-weight:bold; 
  color: #28292b;
  letter-spacing: 0;
  margin: 15rpx 0 0 0;
}
/* 按下按钮触发的效果 */
.button-press {
  position: relative;
  display: flex;
  display: -webkit-flex;
  height: 100rpx;
  width: 100%;
  border-radius: 100rpx;
  justify-content: center;
  -webkit-justify-content: center;
  align-items: center;
  -wekbit-align-items:center;
}
/* 设置按钮图片 */
.button-background {
  position: absolute;
  height: 100rpx;
  width: 100%;
  border-radius: 100rpx;
  left: 0;
  z-index: 1;
}
/* 按钮中间的文字 */
.text-in-button {
  font-weight: bold;
  font-size: 34rpx;
  color: #FFFFFF;
  z-index: 2;
  font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}
/* 按下按钮字体效果 */
.text-in-button.text-press {
  opacity: 0.6;
}